<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="vertical">


	<ImageView
		android:id="@+id/profile_pic"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="20dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:background="@color/primary_dark"
		android:src="@drawable/default_profile"/>


	<TextView
		android:id="@+id/user_name"
		android:layout_width="140dp"
		android:layout_height="40dp"
		android:layout_below="@+id/profile_pic"
		android:gravity="center"
		android:text="Mayukh Chakraborty"
		android:textColor="@color/primary_dark"
		android:textSize="14sp"/>


	<TextView
		android:id="@+id/Z"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_width="75dp"
		android:layout_height="30dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="20dp"
		android:gravity="center"
		android:text="9999"
		android:textColor="@color/primary_dark"
		android:textSize="18dp"/>

	<ImageView
		android:id="@+id/Zimage"
		android:layout_below="@+id/Z"
		android:layout_alignParentRight="true"
		android:layout_marginRight="20dp"
		android:layout_width="75dp"
		android:layout_height="30dp"
		android:layout_gravity="center"
		android:src="@drawable/jewelchat_logo"/>


	<TextView
		android:id="@+id/Y"
		android:layout_toLeftOf="@+id/Z"
		android:layout_alignParentTop="true"
		android:layout_width="75dp"
		android:layout_height="30dp"
		android:layout_marginTop="20dp"
		android:gravity="center"
		android:text="9999"
		android:textColor="@color/primary_dark"
		android:textSize="18dp"/>

	<ImageView
		android:id="@+id/Yimage"
		android:layout_below="@+id/Y"
		android:layout_toLeftOf="@id/Z"
		android:layout_width="75dp"
		android:layout_height="30dp"
		android:layout_gravity="top"
		android:src="@drawable/coins"/>





	<Button
		android:id="@+id/edit_profile"
		android:layout_below="@+id/Yimage"
		android:layout_alignParentRight="true"
		android:layout_width="150dp"
		android:layout_height="40dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="10dp"
		android:layout_marginRight="20dp"
		android:text="EDIT PROFILE"/>




	<TextView
		android:id="@+id/shop_counter_heading"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/primary_dark"
		android:text="Jewel Shop Counter"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_marginTop="10dp"
		android:padding="5dp"
		android:layout_below="@+id/user_name"
		android:textColor="@color/white"/>

	<LinearLayout
		android:id="@+id/shop_counter"
		android:orientation="horizontal"
		android:layout_below="@+id/shop_counter_heading"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:background="@color/accent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:padding="10dp"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/ic_ac"
				android:padding="5dp"
				android:background="@color/white"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textColor="@color/white"
				android:text="X 5"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textColor="@color/white"
				android:text="50"/>
			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_gravity="center"
				android:src="@drawable/jewelchat_logo"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:padding="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<ImageView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/ic_bc"
				android:padding="5dp"
				android:background="@color/white"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:text="X 5"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:text="50"/>
			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_gravity="center"
				android:src="@drawable/jewelchat_logo"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:padding="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/ic_cc"
				android:padding="5dp"
				android:background="@color/white"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:text="X 5"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:text="50"/>
			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_gravity="center"
				android:src="@drawable/jewelchat_logo"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:padding="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/ic_dc"
				android:padding="5dp"
				android:background="@color/white"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:text="X 500"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:text="50000"/>
			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_gravity="center"
				android:src="@drawable/jewelchat_logo"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:padding="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:padding="5dp"
				android:background="@color/white"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:text="X 5"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:text="50"/>
			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_gravity="center"
				android:src="@drawable/jewelchat_logo"/>

		</LinearLayout>

	</LinearLayout>

	<Button
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:layout_below="@+id/shop_counter"
		android:text="Discount Shop"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:gravity="center"
		android:textSize="28dp"
		android:textColor="@color/white"/>


</RelativeLayout>